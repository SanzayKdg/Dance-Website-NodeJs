extends base.pug

block scripts
  script(src='/static/index.js')

block style
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us
        div#forms
            form(action="/contact" method="post" id="form" )
                input(type="text", class="form-group" name="name" placeholder="Enter Full Name") 
                input(type="email", class="form-group" name="email" placeholder="Enter Email") 
                input(type="text", class="form-group" name="phone" placeholder="Enter Contact") 
                input(type="text", class="form-group" name="address" placeholder="Enter Address")
                button(type="submit" class="btn") Submit  